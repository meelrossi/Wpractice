doctype html
html(lang='en')
  head
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(href='css/vendor.css', rel='stylesheet')
    link(href='css/app.min.css', rel='stylesheet')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    nav(id='header' class='navbar navbar-default' role="navigation")
      div(class='container')
        div(class='navbar-header')
          button(type='button' class='navbar-toggle' data-toggle='collapse' data-target='#navbar-brand-centered')
            span(class="sr-only")
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          div(class='navbar-brand-centered')
            h4
              | ANDY PARKER
            h6
              | PHOTOGRAPHY
        div(id='navbar-brand-centered' class='collapse navbar-collapse')
          ul(class='nav navbar-nav principal-menu')
            li
              a(class='header-link single-link' href="#")
                | HOME
            li
              a(class='header-link single-link' href="#")
                | ABOUT
            li
              a(class='header-link portfolio' href="#")
                | PORTFOLIO
            li
              a(class='header-link single-link' href="#")
                | CONTACT
          ul(id='portfolios-list' class='nav navbar-nav portfolios portfolios--hidden')
            li
              a(class='header-link')
                | PORTFOLIO1
            li
              a(class='header-link')
                | PORTFOLIO2
            li
              a(class='header-link')
                | PORTFOLIO3
          ul(class='nav navbar-nav navbar-right logos')
            li
              img(class='social-logo' src='images/facebook.png' alt='facebook')
            li
              img(class='social-logo' src='images/twitter.png' alt='twitter')
            li
              img(class='social-logo' src='images/pinterest.png' alt='pinterest')
    div(class='principal-images')
        img(class='image' src='images/animals.jpg' alt='animals')
        img(class='image' src='images/people2.jpg' alt='people2')
        img(class='image' src='images/nature.jpg' alt='nature')
        img(class='image' src='images/objects.jpg' alt='objects')
        img(class='image' src='images/landscapes.jpg' alt='landscapes')
        img(class='image' src='images/skyes.jpg' alt='skyes')
    div(id='footer' class='footer')
      div(class='copyright')
        p
          | Copyright
          span(class='glyphicon glyphicon-copyright-mark' aria-hidden='true')
          | 2014 Andy Parker
      div(class='buttons')
        button(class='principal-button full-screen')
          span(class='glyphicon glyphicon-resize-vertical')
        button(class='principal-button pause')
          span(id='play-pause' class='glyphicon glyphicon-pause')
        button(class='principal-button next')
          span(class='glyphicon glyphicon-arrow-left')
        button(class='principal-button previous')
          span(class='glyphicon glyphicon-arrow-right')

    script(type='text/javascript' src='//code.jquery.com/jquery-1.11.0.min.js')
    script(type='text/javascript' src='//code.jquery.com/jquery-migrate-1.2.1.min.js')
    script(src='js/libs.min.js')
    script(src='js/app.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
